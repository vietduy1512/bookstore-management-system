<!DOCTYPE html>
<html>

{{>__head__ }}

<body>
    <div id="all">

        {{>topnavbar}}

        <!-- Heading Start -->
        <div id="heading-breadcrumbs">
            <div class="container">
                <div class="row d-flex align-items-center flex-wrap">
                    <div class="col-md-7">
                        <h4></h4>
                    </div>
                    <div class="col-md-5">
                        <ul class="breadcrumb d-flex justify-content-end">
                            <li class="breadcrumb-item">
                                <a href="/">Home</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="/books">Reset Password</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- Heading End -->

        <div id="content">
            <div class="container">
                <div class="row p-4" style="background-color: white">
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-6">
                        <h1>Đặt lại mật khẩu cho tài khoản {{user.Email}}</h1>
                        <p class="bg-danger" id="resetpassword_notify">

                        </p>
                        <form id="resetpassword_form" class="p-4">
                            <div class="form-group">
                                <label for="">Mật Khẩu Mới</label>
                                <input type="password" class="form-control" name="password" id="password_reset" required minlength="6" maxlength="32" placeholder="Mật Khẩu Mới">
                            </div>
                            <div class="form-group">
                                <label for="">Nhập Lại Mật Khẩu Mới</label>
                                <input type="password" class="form-control" name="password_retype" required oninput="CheckRetypePasswordReset(this)" placeholder="Nhập Lại Mật Khẩu">
                            </div>
                            <button type="submit" class="btn btn-primary">Đặt Lại Mật Khẩu</button>
                        </form>
                    </div>


                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="sucess-modal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Đặt Lại Mật Khẩu Thành Công</h4>
                    {{!--
                    <button type="button" class="close" data-dismiss="modal">&times;</button> --}}
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div class="text-center">
                        <img src="/images/sucess.png" alt="">
                        <h4>Bạn Đã Đặt Lại Mật Khẩu Thành Công</h4>
                        <h5>Hãy dùng mật khẩu trên để đăng nhập</h5>
                        <a role="button" href="/" class="btn btn-warning mb-4">Quay Lại Trang Mua Sắm</a>
                    </div>
                </div>

            </div>
        </div>
    </div>



    {{>footer}}

    </div>

    {{>__script__}}
</body>

</html>