<head>
  {{>admin_head}}

</head>

<body>

  {{>admin_dashboard_leftpanel}}

  <!-- Right Panel -->

  <div id="right-panel" class="right-panel">

    {{>admin_dashboard_header}}

    <div class="breadcrumbs">
      <div class="col-sm-4">
        <div class="page-header float-left">
          <div class="page-title">
            <h1>Dashboard</h1>
          </div>
        </div>
      </div>
      <div class="col-sm-8">
        <div class="page-header float-right">
          <div class="page-title">
            <ol class="breadcrumb text-right">
              <li class="active">Dashboard</li>
            </ol>
          </div>
        </div>
      </div>
    </div>

    <div class="content mt-3">
      <div class="animated fadeIn">
        <div class="row">
          <div class="col-md-12 bg-danger">
            <ol style="color:white">
              {{#errors}}
              <p>{{msg}}</p>
              {{/errors}}
            </ol>
          </div>
          <div class="col-md-12">

            <div class="bar">
              <form  method="post">
                <div class="row mt-3">
                  <div class="col-md-12">
                    <div class="form-group">
                      <h5 for="author_name">Tên tác giả</h5>
                      <input type="text" name="author_name" class="form-control" placeholder="Shinkai Makoto" value='{{author.Ten}}' required>
                    </div>
                  </div>
                </div>
                <div class="row mt-3">
                  <div class="col-md-12">
                    <div class="form-group">
                      <h5 for="date_of_birth">Ngày sinh</h5>
                      <input type="date" name="date_of_birth" class="form-control" required value="{{author.NgaySinhUpdateFormat}}">
                    </div>
                  </div>
                </div>
                <div class="row mt-3">
                  <div class="col-md-12">
                    <div class="form-group">
                      <h5 for="date_of_death">Ngày mất</h5>
                      <input type="date" name="date_of_death" class="form-control" required value="{{author.NgayMatUpdateFormat}}">
                    </div>
                  </div>
                </div>

                <div class="text-center">
                  <button type="submit" class="btn btn-lg btn-outline-primary">
                    <i class="fa fa-save"></i> Tạo</button>
                </div>
              </form>

            </div>
          </div>

        </div>
      </div>
      <!-- .animated -->
    </div>
    <!-- .content -->
  </div>
  <!-- /#right-panel -->

  <!-- Right Panel -->

  {{>admin_script}}

  <script type="text/javascript">
    $(document).ready(function () {
      $('#bootstrap-data-table-export').DataTable();
    });
  </script>

  <script>
    function hide_element(_id) {
      var x = document.getElementById(_id);
      alert(_id)
      if (x.style.display !== "none") {
        x.style.display = "none";
      }
    }
  </script>

</body>

</html>