<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>{{title}}</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="all,follow">
    <!-- Bootstrap CSS-->
    <link rel="stylesheet" href="/vendors/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome CSS-->
    <link rel="stylesheet" href="/vendors/font-awesome/css/font-awesome.min.css">
    <!-- Google fonts - Roboto-->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,700">

    <!-- Stylesheet-->
    <link rel="stylesheet" href="/stylesheets/style.css" id="theme-stylesheet">
    <link rel="stylesheet" href="/stylesheets/custom.css">
    <!-- Favicon and apple touch icons-->
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>

<body>
    <div id="all">
        {{>topnavbar }}

        <!-- Heading Start -->
        <div id="heading-breadcrumbs">
            <div class="container">
                <div class="row d-flex align-items-center flex-wrap">
                    <div class="col-md-7">
                        {{!--
                        <h1 class="h2 catalog-title">{{print_genre_name genre_name}}</h1> --}}
                    </div>
                    <div class="col-md-5">
                        <ul class="breadcrumb d-flex justify-content-end">
                            <li class="breadcrumb-item">
                                <a href="/">Home</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="{{author.url}}">{{author.Ten}}</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- Heading End -->

        <div id="content">
            <div class="container">
                <div class="row bar">
                    {{> shopcategorysidebar}}

                    <!-- Products-->
                    <div class="col-md-12 col-lg-9">
                        <div class="row products products-big">

                            <!-- Info -->
                            <div class="col-md-12 mb-4">
                                <div class="row">
                                    <div class="col-12 text-center">
                                        <h2>Tác Giả: {{author.Ten}}</h2>
                                        <h4>Ngày Sinh: {{author.NgaySinh}}</h4>
                                        <h4>Ngày Mất: {{author.NgayMat}}</h4>
                                    </div>
                                </div>
                            </div>

                            <!-- Info -->
                            <div class="col-md-12 mb-4">
                                <div class="row">
                                    <div class="col-md-5">
                                        <span class="badge badge-primary">
                                            <small>Tác Giả</small>
                                        </span> : {{author.Ten}}
                                    </div>
                                    <div class="col-md-3">
                                        <span class="badge badge-success">
                                            <small>Số lượng</small>
                                        </span> : {{sach_count}}
                                    </div>
                                </div>
                            </div>

                            <!-- Product's List -->
                            {{#each list_books}}
                            <div class="col-xl-3 col-md-4 col-sm-6">
                                <div class="product">
                                    <div class="image">
                                        <a href={{url}}>
                                            <img src="/{{HinhAnh}}" alt="" class="img-fluid image1">
                                        </a>
                                    </div>
                                    <div class="text">
                                        <a href={{url}} class="title">{{TuaDe}}</a>
                                        <a href="" class="author">{{TacGia.Ten}}</a>
                                        <p class="price-sale">{{Gia}}&nbsp;₫</p>
                                        <small>

                                            <p class="review">{{{render_Book_Rating ChiTietDanhGia}}}</p>
                                        </small>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                            <!-- Product's List END -->
                        </div>
                        <!-- Products END -->
                        <div class="pages">
                            <nav aria-label="Page navigation example" class="d-flex justify-content-center">
                                <ul class="pagination">

                                    {{{render_Pagination page}}}

                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>

                {{>scrolltotop}}

            </div>
        </div>

        {{>footer}}

    </div>

    <!-- Javascript files-->
    {{>__script__}}

</body>

</html>