<head>
    {{>admin_head}}

</head>

<body>

    {{>admin_dashboard_leftpanel}}

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        {{>admin_dashboard_header}}

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li class="active">Dashboard</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        <div class="content mt-3">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <strong class="card-title">Data Table</strong>
                            </div>
                            <div class="card-body">
                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Tên tác giả</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each list_authors}}
                                        <tr id={{_id}}>
                                            <td>
                                                <a style="color:darkblue" href="{{url}}" target="_blank">{{Ten}}</a>
                                            </td>
                                            <td>
                                                <a class="btn btn-outline-danger" onclick="deleteClick(this)" role="button">Xóa</a>
                                                <a class="btn btn-outline-primary" href="/authors/{{_id}}/update" role="button">Sửa</a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <hr>
                    <div class="col-md-12">
                        <h2>Thêm Tác Giả</h2>
                        <div class="bg-danger">
                            <ol style="color:white">
                                {{#errors}}
                                <p>{{msg}}</p>
                                {{/errors}}
                            </ol>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="bar">
                            <form action="/authors/create" method="post">
                                <div class="row mt-3">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <h5 for="author_name">Tên tác giả</h5>
                                            <input type="text" name="author_name" class="form-control" placeholder="Shinkai Makoto" value='{{author.Ten}}' required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <h5 for="date_of_birth">Ngày sinh</h5>
                                            <input type="date" name="date_of_birth" class="form-control" required value={{author.NgaySinh}}>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <h5 for="date_of_death">Ngày mất</h5>
                                            <input type="date" name="date_of_death" class="form-control" required value={{author.NgayMat}}>
                                        </div>
                                    </div>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-lg btn-outline-primary">
                                        <i class="fa fa-save"></i> Tạo</button>
                                </div>

                                <hr>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
            <!-- .animated -->
        </div>
        <!-- .content -->
    </div>
    <!-- /#right-panel -->

    <!-- Right Panel -->

    {{>admin_script}}


    <script type="text/javascript">
        var table;
        $(document).ready(function () {
            table= $('#bootstrap-data-table').DataTable();
        });

        function hide_element(_id) {
            var x = document.getElementById(_id);
            alert(_id)
            if (x.style.display !== "none") {
                x.style.display = "none";
            }
        }

        function deleteClick(e) {
            if (confirm("are you sure?")) {
                var id = e.parentNode.parentNode.id;
                $.ajax({
                    url: "/authors/" + id + "/delete",
                    method: 'Post',
                    success: function (result, status, xhr) {
                        console.log(result)
                        if (result.err) {
                            alert("Đã Có Lỗi Xảy Ra");
                        } else {
                            console.log(table
                                .rows('#'+id)
                                .remove()
                                .draw());
                        }
                    }
                })
            }
        }
    </script>

</body>

</html>